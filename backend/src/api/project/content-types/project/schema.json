{
    "kind": "collectionType",
    "collectionName": "projects",
    "info": {
        "singularName": "project",
        "pluralName": "projects",
        "displayName": "Project",
        "description": "Portfolio projects"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "year": {
            "type": "string"
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "thumbnail": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images",
                "videos"
            ]
        },
        "description": {
            "type": "richtext"
        },
        "material": {
            "type": "text"
        },
        "content": {
            "type": "dynamiczone",
            "components": [
                "content.image-slide",
                "content.video-slide"
            ]
        }
    }
}